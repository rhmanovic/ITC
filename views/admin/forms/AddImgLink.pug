// extends layout

block content
  .container.clearfix
    form(method='POST' action='/admin/AddImgLink')
      input(type="hidden" name="chapterId" value= chapterId)
      div.form-group
        label(for='course') Add image Link
        input#name.form-control(type='text', placeholder='Image Link' name='imgLink')
      button.btn.btn-primary(type='submit') Submit
      span.appearText(type='button' onclick="this.parentElement.style.display = 'none'") cancel

