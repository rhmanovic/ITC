
block content
  .container.clearfix
    form(method='POST' action='/admin/edit_status')
      input(type="hidden" name="chapterId" value= chapterId)
      div.form-group
        label(for='course') Status?:
        input#name.form-control(type='text', placeholder='available or none' name='status')
      button.btn.btn-primary(type='submit') Submit
      span.appearText(type='button' onclick="this.parentElement.style.display = 'none'") cancel
