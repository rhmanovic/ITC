// extends layout

block content
  .container.clearfix
    form(method='POST' action='/admin/AddSection')
      input(type="hidden" name="chapterId" value= chapterId)
      // input(type="hidden" name="SectionIndex" value= sectionIndex)
      div.form-group
        label(for='course') Add New Product:
        input#name.form-control(type='text', placeholder='Product Name' name='sectionName')
      button.btn.btn-primary(type='submit') Submit
      span.appearText(type='button' onclick="this.parentElement.style.display = 'none'") cancel
